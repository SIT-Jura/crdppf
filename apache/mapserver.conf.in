ScriptAlias /${vars:instanceid}/mapserv ${mapserverexec}
<Location /${vars:instanceid}/mapserv>
   # If you use tilecache and want to prevent direct WMS access, uncomment 
   # the following lines:
   Order Deny,Allow
   Deny from all
   ${vars:mapserv_allow}
   SetHandler cgi-script
   SetEnv MS_MAPFILE ${buildout:directory}/mapserver/crdppf.map
</Location>

